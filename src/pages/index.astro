---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';

const title = "Alliance Medical Supply and Rental - Durable Medical Equipment & Supplies | San Jose, CA";
const description = "JACHO accredited medical equipment provider serving Bay Area communities. Quality durable medical equipment rentals, parts & repair, home assessment, and notary services.";
---

<Layout title={title} description={description}>
  <main id="main-content">
    <!-- Navigation -->
    <nav class="fixed top-0 w-full bg-white/95 backdrop-blur-sm shadow-sm z-50 transition-all duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <h1 class="text-xl font-bold text-primary-600">Alliance Medical Supply</h1>
            </div>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-8">
              <a href="/" class="nav-link" aria-current="page">Home</a>
              <a href="/about-us" class="nav-link">About Us</a>
              <div class="relative group">
                <button class="nav-link flex items-center" aria-expanded="false" aria-haspopup="true">
                  Rental Equipment
                  <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div class="nav-dropdown">
                  <a href="/walker-gallery" class="nav-dropdown-item">Walker Gallery</a>
                  <a href="/wheelchair-gallery" class="nav-dropdown-item">Wheelchair Gallery</a>
                  <a href="/crutches" class="nav-dropdown-item">Crutches</a>
                  <a href="/suction-machine" class="nav-dropdown-item">Suction Machine</a>
                </div>
              </div>
              <a href="/shop" class="nav-link">Shop</a>
              <div class="relative group">
                <button class="nav-link flex items-center" aria-expanded="false" aria-haspopup="true">
                  Services
                  <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div class="nav-dropdown">
                  <a href="/parts-repair" class="nav-dropdown-item">Parts & Repair</a>
                  <a href="/notary-service" class="nav-dropdown-item">Public Notary Service</a>
                  <a href="/home-assesment" class="nav-dropdown-item">Home Assessment</a>
                </div>
              </div>
              <a href="/contact-us" class="nav-link">Contact Us</a>
            </div>
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button id="mobile-menu-button" class="text-gray-900 hover:text-primary-600 focus:outline-none" aria-expanded="false" aria-controls="mobile-menu">
              <span class="sr-only">Open main menu</span>
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="md:hidden hidden bg-white border-t">
        <div class="px-2 pt-2 pb-3 space-y-1">
          <a href="/" class="block px-3 py-2 text-gray-900 hover:bg-gray-50" aria-current="page">Home</a>
          <a href="/about-us" class="block px-3 py-2 text-gray-900 hover:bg-gray-50">About Us</a>
          <a href="/gallery" class="block px-3 py-2 text-gray-900 hover:bg-gray-50">Rental Equipment</a>
          <a href="/shop" class="block px-3 py-2 text-gray-900 hover:bg-gray-50">Shop</a>
          <a href="/services" class="block px-3 py-2 text-gray-900 hover:bg-gray-50">Services</a>
          <a href="/contact-us" class="block px-3 py-2 text-gray-900 hover:bg-gray-50">Contact Us</a>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="min-h-screen gradient-primary relative overflow-hidden">
      <!-- Animated Background Elements -->
      <div class="absolute inset-0" aria-hidden="true">
        <div class="animate-float absolute top-20 left-10 w-32 h-32 bg-primary-400/20 rounded-full blur-xl"></div>
        <div class="animate-float absolute top-40 right-20 w-48 h-48 bg-secondary-400/20 rounded-full blur-xl"></div>
        <div class="animate-float absolute bottom-20 left-1/4 w-24 h-24 bg-white/10 rounded-full blur-xl"></div>
      </div>

      <div class="relative z-10 flex items-center min-h-screen">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
          <div class="grid lg:grid-cols-2 gap-16 items-center">
            <!-- Hero Content -->
            <div class="text-white animate-fade-in">
              <h2 class="text-5xl lg:text-6xl font-bold mb-6 leading-tight">
                Professional Medical Equipment & 
                <span class="text-primary-100">Healthcare Solutions</span>
              </h2>
              <p class="text-xl lg:text-2xl text-primary-100 mb-8 leading-relaxed">
                Serving Bay Area communities with quality durable medical equipment, supplies, and professional consultation. JACHO accredited for your trust and safety. Demo site made by Shakthi Rodrigo.
              </p>
              <div class="flex flex-col sm:flex-row gap-4">
                <a href="/gallery" class="btn-primary">
                  Browse Equipment
                </a>
                <a href="/contact-us" class="btn-secondary">
                  Contact Us Today
                </a>
              </div>
              
              <!-- Trust Indicators -->
              <div class="mt-12 grid grid-cols-3 gap-6">
                <div class="text-center">
                  <div class="text-3xl font-bold text-white">15+</div>
                  <div class="text-primary-100">Years Serving</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-white">JACHO</div>
                  <div class="text-primary-100">Accredited</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-white">8</div>
                  <div class="text-primary-100">Bay Area Cities</div>
                </div>
              </div>
            </div>

            <!-- Hero Visual -->
            <div class="hidden lg:block animate-slide-up">
              <div class="relative">
                <div class="bg-white/10 backdrop-blur-sm rounded-3xl p-8 shadow-2xl">
                  <div class="grid grid-cols-2 gap-6">
                    <div class="bg-white/20 rounded-2xl p-6 text-center text-white">
                      <div class="icon-gradient mx-auto mb-4">
                        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M10 2L3 7v11a1 1 0 001 1h3v-8h6v8h3a1 1 0 001-1V7l-7-5z"/>
                        </svg>
                      </div>
                      <div class="font-semibold">Home Assessment</div>
                    </div>
                    <div class="bg-white/20 rounded-2xl p-6 text-center text-white">
                      <div class="icon-gradient-reverse mx-auto mb-4">
                        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                      </div>
                      <div class="font-semibold">Quality Assured</div>
                    </div>
                    <div class="bg-white/20 rounded-2xl p-6 text-center text-white">
                      <div class="icon-gradient mx-auto mb-4">
                        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
                        </svg>
                      </div>
                      <div class="font-semibold">Equipment Rental</div>
                    </div>
                    <div class="bg-white/20 rounded-2xl p-6 text-center text-white">
                      <div class="icon-gradient-reverse mx-auto mb-4">
                        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                          <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                        </svg>
                      </div>
                      <div class="font-semibold">Professional Service</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h3 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
            Comprehensive Healthcare Solutions
          </h3>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            We provide professional medical equipment services and supplies to healthcare providers, patients, and caregivers throughout the Bay Area.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Medical Equipment Rental -->
          <article class="service-card service-card-primary">
            <div class="icon-gradient mb-6">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
              </svg>
            </div>
            <h4 class="text-2xl font-bold text-gray-900 mb-4">Medical Equipment Rental</h4>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Quality durable medical equipment including wheelchairs, walkers, hospital beds, and mobility aids available for rental.
            </p>
            <a href="/gallery" class="text-primary-600 font-medium hover:text-primary-700 transition-colors duration-300">
              Browse Equipment →
            </a>
          </article>

          <!-- Parts & Repair -->
          <article class="service-card service-card-secondary">
            <div class="icon-gradient-reverse mb-6">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
              </svg>
            </div>
            <h4 class="text-2xl font-bold text-gray-900 mb-4">Parts & Repair Services</h4>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Professional repair services for medical equipment with genuine replacement parts and certified technicians.
            </p>
            <a href="/parts-repair" class="text-secondary-600 font-medium hover:text-secondary-700 transition-colors duration-300">
              Learn More →
            </a>
          </article>

          <!-- Home Assessment -->
          <article class="service-card service-card-primary">
            <div class="icon-gradient mb-6">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"/>
              </svg>
            </div>
            <h4 class="text-2xl font-bold text-gray-900 mb-4">Professional Home Assessment</h4>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Comprehensive home safety evaluations and equipment recommendations for accessible living.
            </p>
            <a href="/home-assesment" class="text-primary-600 font-medium hover:text-primary-700 transition-colors duration-300">
              Schedule Assessment →
            </a>
          </article>

          <!-- Medical Supplies -->
          <article class="service-card service-card-secondary">
            <div class="icon-gradient-reverse mb-6">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
              </svg>
            </div>
            <h4 class="text-2xl font-bold text-gray-900 mb-4">Medical Supplies & Products</h4>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Wide selection of medical supplies, accessories, and healthcare products for facilities and home care.
            </p>
            <a href="/shop" class="text-secondary-600 font-medium hover:text-secondary-700 transition-colors duration-300">
              View Catalog →
            </a>
          </article>

          <!-- Notary Services -->
          <article class="service-card service-card-primary">
            <div class="icon-gradient mb-6">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4zM18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"/>
              </svg>
            </div>
            <h4 class="text-2xl font-bold text-gray-900 mb-4">Public Notary Services</h4>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Convenient notary services for medical documents, legal forms, and healthcare-related paperwork.
            </p>
            <a href="/notary-service" class="text-primary-600 font-medium hover:text-primary-700 transition-colors duration-300">
              Book Appointment →
            </a>
          </article>

          <!-- Professional Consultation -->
          <article class="service-card service-card-secondary">
            <div class="icon-gradient-reverse mb-6">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"/>
              </svg>
            </div>
            <h4 class="text-2xl font-bold text-gray-900 mb-4">Professional Consultation</h4>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Expert guidance on equipment selection, insurance coverage, and healthcare solutions.
            </p>
            <a href="/contact-us" class="text-secondary-600 font-medium hover:text-secondary-700 transition-colors duration-300">
              Get Consultation →
            </a>
          </article>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- About Content -->
          <div class="animate-slide-in-left">
            <h3 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
              JACHO Accredited Healthcare Solutions
            </h3>
            <p class="text-xl text-gray-600 mb-8 leading-relaxed">
              Alliance Medical Supply and Rental has been serving Bay Area communities with professional medical equipment and supplies. We value your business and strive to provide individual attention to our customers' needs.
            </p>
            
            <div class="space-y-6 mb-8">
              <div class="flex items-start">
                <div class="w-6 h-6 bg-primary-500 rounded-full flex items-center justify-center mt-1 mr-4">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                  </svg>
                </div>
                <div>
                  <h5 class="font-semibold text-gray-900 mb-2">JACHO Accredited Facility</h5>
                  <p class="text-gray-600">Our accreditation ensures the highest standards of safety and quality in all our services and equipment.</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-6 h-6 bg-secondary-500 rounded-full flex items-center justify-center mt-1 mr-4">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                  </svg>
                </div>
                <div>
                  <h5 class="font-semibold text-gray-900 mb-2">Bay Area Coverage</h5>
                  <p class="text-gray-600">Serving San Jose, Santa Clara, Milpitas, Fremont, Palo Alto, Sunnyvale, Gilroy, and Morgan Hill.</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-6 h-6 bg-primary-500 rounded-full flex items-center justify-center mt-1 mr-4">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                  </svg>
                </div>
                <div>
                  <h5 class="font-semibold text-gray-900 mb-2">Professional Consultation</h5>
                  <p class="text-gray-600">Our relationship with you is important and we are committed to earning your business throughout the years ahead.</p>
                </div>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-6">
              <div class="text-center p-6 bg-primary-50 rounded-xl">
                <div class="text-3xl font-bold text-primary-600 mb-2">100+</div>
                <div class="text-gray-600">Equipment Types</div>
              </div>
              <div class="text-center p-6 bg-secondary-50 rounded-xl">
                <div class="text-3xl font-bold text-secondary-600 mb-2">24/7</div>
                <div class="text-gray-600">Support Available</div>
              </div>
            </div>
          </div>

          <!-- About Visual -->
          <div class="relative animate-slide-in-right">
            <div class="gradient-primary rounded-3xl p-8 text-white">
              <h4 class="text-2xl font-bold mb-6">Our Service Areas</h4>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div class="bg-white/20 rounded-lg p-3">San Jose</div>
                <div class="bg-white/20 rounded-lg p-3">Santa Clara</div>
                <div class="bg-white/20 rounded-lg p-3">Milpitas</div>
                <div class="bg-white/20 rounded-lg p-3">Fremont</div>
                <div class="bg-white/20 rounded-lg p-3">Palo Alto</div>
                <div class="bg-white/20 rounded-lg p-3">Sunnyvale</div>
                <div class="bg-white/20 rounded-lg p-3">Gilroy</div>
                <div class="bg-white/20 rounded-lg p-3">Morgan Hill</div>
              </div>
              <div class="mt-6 text-center">
                <p class="text-primary-100">Located at:</p>
                <p class="font-semibold">301 N Jackson Ave, Suite 7A</p>
                <p class="font-semibold">San Jose, CA 95133</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h3 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
            Get in Touch with Our Team
          </h3>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Ready to find the right medical equipment solution? Contact us today for professional consultation and personalized service.
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-16">
          <!-- Contact Form -->
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h4 class="text-2xl font-bold text-gray-900 mb-6">Send us a Message</h4>
            <form class="space-y-6" method="POST" action="/contact">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="first-name" class="block text-sm font-medium text-gray-700 mb-2">First Name *</label>
                  <input type="text" id="first-name" name="firstName" required class="form-input" aria-required="true">
                </div>
                <div>
                  <label for="last-name" class="block text-sm font-medium text-gray-700 mb-2">Last Name *</label>
                  <input type="text" id="last-name" name="lastName" required class="form-input" aria-required="true">
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
                <input type="email" id="email" name="email" required class="form-input" aria-required="true">
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                <input type="tel" id="phone" name="phone" class="form-input">
              </div>
              
              <div>
                <label for="service" class="block text-sm font-medium text-gray-700 mb-2">Service Interest</label>
                <select id="service" name="service" class="form-select">
                  <option value="">Select a service</option>
                  <option value="rental">Equipment Rental</option>
                  <option value="repair">Parts & Repair</option>
                  <option value="assessment">Home Assessment</option>
                  <option value="notary">Notary Services</option>
                  <option value="consultation">General Consultation</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message *</label>
                <textarea id="message" name="message" rows="4" required class="form-textarea" placeholder="Tell us about your needs..." aria-required="true"></textarea>
              </div>
              
              <button type="submit" class="btn-primary w-full">
                Send Message
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <!-- Business Info -->
            <div class="bg-white rounded-2xl shadow-lg p-8">
              <h4 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h4>
              <address class="space-y-4 not-italic">
                <div class="flex items-start">
                  <div class="w-6 h-6 bg-primary-500 rounded-full flex items-center justify-center mt-1 mr-4">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <div>
                    <h5 class="font-semibold text-gray-900">Address</h5>
                    <p class="text-gray-600">301 N Jackson Ave, Suite 7A<br>San Jose, CA 95133</p>
                  </div>
                </div>
                
                <div class="flex items-start">
